<Window x:Class="WpfApp1.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow1" Height="200" Width="800" 
        WindowStyle="ToolWindow" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded" 
        Closing="Window_Closing" 
        Closed="Window_Closed">
    <Grid Background="#FF383232">
        <UniformGrid Rows="1" Columns="4">
            <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click1"/>
            <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click2"/>
            <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click3"/>
            <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click4"/>
        </UniformGrid>
    </Grid>
</Window>
